<div class="container">
  <div class="row justify-content-md-center">
    <%= form_for @document, url: { action: "create" } do |f| %>
      <div class="form-group">
          <%= f.label :country %><br />
          <%= f.select :country, options_for_select(CS.countries.map{ |c| c[1] })%>
      </div>
      <div class="form-group">
          <%= f.label :document_type %><br />
          <%= f.select :document_type, options_for_select(["PASSPORT", "ID_CARD", "DRIVERS_LICENSE", "RESIDENCE_PERMIT"]), class: "form-control", placeholder: "Pickup Date" %>
      </div>
      <div class="form-group">
          <%= f.text_field :number, class: "form-control", placeholder: "Document number"%>
      </div>
      <div class="form-group">
          <%= f.date_field :valid_from, class: "form-control", placeholder: "Valid from Date" %>
      </div>
      <div class="form-group">
          <%= f.date_field :valid_until, class: "form-control", placeholder: "Valid until Date" %>
      </div>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <%= f.submit "Add My Document", class: "btn btn-default btn-primary" %>  
    <% end %>
  </div>
</div>
