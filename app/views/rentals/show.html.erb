<div class="container">
  <div class="row">
    <div class="jumbotron">
      <h1 class="display-4">Your <%= @vehicle.make %> is ready!</h1>

      <% unless @documents.any? %>
        <p class="lead">Add a new document to start your verification proccess</p>
        <div class="btn btn-primary">
          <%= link_to 'Add a new document', new_document_path, class: "btn btn-primary" %>
        </div>
      <% end %>

      <hr class="my-4">
       
      <% if @state == :verified %> 
        <%= render 'rentals/verified'%>
      <% else %>
        <%= render 'rentals/unverified'%>
      <% end %>

    </div>
  </div>
</div>