<div class="container">
  <div class="heroBan"></div>
  <div class="row justify-content-md-center new-rental">
    <div class="col-md-12 text-center">
      <h2> Check out all our spring offers </h2>
    </div>
  </div>
  <div class="row justify-content-md-center new-rental">
    <%= form_for @rental, url: { action: "create" }, html: { id: "rental-form"} do |f| %>
      <div class="row">
      <div class="col-md-6">
        <div class="form-group">
            <%= f.label "Pick up location" %>
            <%= f.collection_select :pickup_location, Location.order(:name),:full_location_name, :full_location_name %>
        </div>
        <div class="form-group">
            <%= f.label :pickup_date %>
          <div class="datepicker">
            <%= f.date_select :pickup_date, min: Date.today, class: "form-control", input_html: { value: Time.now.strftime('%d-%m-%Y'), min: Date.today } %>
          </div>
            <%= f.label :pickup_time %>
          <div class="datepicker">
            <%= f.time_select :pickup_date, class: "form-control", placeholder: "Pickup Time", :ignore_date => true %>
          </div>
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group">
          <div class="form-row">
            <%= f.label "Drop off location" %>
            <%= f.collection_select :dropoff_location, Location.order(:name),:full_location_name, :full_location_name %>
          </div>
        </div>
        <div class="form-group">
            <%= f.label :dropoff_date %>
          <div class="datepicker">
            <%= f.date_select :dropoff_date, class: "form-control", input_html: { value: Time.now.strftime('%d-%m-%Y'), min: Date.today } %>
          </div>
            <%= f.label :dropoff_time %>
          <div class="datepicker">
            <%= f.time_select :dropoff_date, class: "form-control", placeholder: "Pickup Time", :ignore_date => true %>
          </div>
        </div>
      </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.label "Select a car" %>
            <%= f.collection_select :vehicle_id, Vehicle.order(:make),:id,:full_car_name %>
          </div>
        </div>
      </div>

      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div class="row">
        <div class="col-md-12">
          <div class="form-group">
            <%= f.submit "Select My Car", class: "btn btn-default btn-primary" %>  
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
