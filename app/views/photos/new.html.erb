<%= form_for @photo, url: { action: "create" },  html: { multipart: true } do |form| %>
  <div class="form-group">
    <%= form.label "Clear image of the face" %>
    <%= form.file_field :face, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label "Document Back Side" %>
    <%= form.file_field :document_back, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= form.label "Document Front Side" %>
    <%= form.file_field :document_front, class: 'form-control' %>
  </div>
  <%= form.hidden_field :document_id, value: params[:document_id] %>
  <div class="form-group">
    <%= form.submit "Submit Images", class: 'btn btn-success' %>
  </div>
<% end %>